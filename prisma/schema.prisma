model Product {
  id          String   @id @default(cuid()) @map("_id")
  name        String
  price       Int
  description String
  image       String
  category    Category @relation(fields: [categoryId], references: [id])
  categoryId  String
  menu        Menu?    @relation(fields: [menuId], references: [id])
  menuId      String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Category {
  id        String    @id @default(cuid()) @map("_id")
  name      String
  products  Product[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Menu {
  id        String    @id @default(cuid()) @map("_id")
  name      String
  products  Product[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}
